<a id="sctAdminChatBtn" class="sct-admin-chat" href="/system/chatgpt.html" aria-label="Apri Chat Admin">üß†</a>
<script>
(function(){
  const KEY = "SCT_ADMIN_ON";
  const btn = document.getElementById("sctAdminChatBtn");
  function isOn(){ try{ return localStorage.getItem(KEY)==="1"; }catch(e){ return false; } }
  function setOn(v){ try{ localStorage.setItem(KEY, v ? "1" : "0"); }catch(e){} sync(); }
  function sync(){
    if (isOn()) document.body.classList.add("sct-admin-on");
    else document.body.classList.remove("sct-admin-on");
  }
  sync();

  /* Sequenza segreta: 6 tocchi veloci sul titolo della pagina (o sul primo H1/H2) */
  let taps=0, t0=0;
  const target = document.querySelector("header, h1, h2, .title, .brand") || document.body;
  target.addEventListener("click", () => {
    const now = Date.now();
    if (!t0 || (now - t0) > 1800){ t0 = now; taps = 0; }
    taps++;
    if (taps >= 6){
      setOn(!isOn());
      taps = 0; t0 = 0;
      /* feedback minimo e invisibile: vibra se disponibile */
      try{ navigator.vibrate && navigator.vibrate(60); }catch(e){}
    }
  }, true);

  /* protezione: se admin OFF, nessuna voce */
  if (!isOn()){
    try{ window.speechSynthesis && window.speechSynthesis.cancel(); }catch(e){}
  }
})();
</script>

