<script>
const getLang = ()=>{
  const l=(navigator.language||"en").toLowerCase();
  if(l.startsWith("it")) return "it";
  if(l.startsWith("uk")||l.startsWith("ua")) return "ua";
  return "en";
};

const LANG=getLang();
document.documentElement.lang = LANG;
document.getElementById("langPill").textContent = "Lingua: " + LANG.toUpperCase();

let DATA=null;

async function load(){
  const r = await fetch("/system/guide/universal.json", {cache:"no-store"});
  DATA = await r.json();
  const block = DATA[LANG] || DATA["en"];
  document.getElementById("titlePill").textContent = block.title || "SerCucTech";
  document.getElementById("text").textContent = block.text || "";
  document.getElementById("status").textContent = "pronto";
}
load().catch(e=>{
  console.error(e);
  document.getElementById("status").textContent = "errore caricamento";
});

function speak(text){
  try{
    speechSynthesis.cancel();
    const u = new SpeechSynthesisUtterance(text);
    u.lang = (LANG==="ua") ? "uk-UA" : (LANG==="it" ? "it-IT" : "en-US");
    speechSynthesis.speak(u);
    document.getElementById("status").textContent="parlo‚Ä¶";
    u.onend=()=>document.getElementById("status").textContent="pronto";
  }catch(e){
    document.getElementById("status").textContent="audio non disponibile";
  }
}

document.getElementById("play").onclick=()=>{
  const block = (DATA && (DATA[LANG]||DATA.en)) || {text:""};
  speak(block.text || "");
};
document.getElementById("pause").onclick=()=>{
  try{ speechSynthesis.pause(); document.getElementById("status").textContent="pausa"; }catch(e){}
};
document.getElementById("stop").onclick=()=>{
  try{ speechSynthesis.cancel(); document.getElementById("status").textContent="stop"; }catch(e){}
};

document.getElementById("copy").onclick=async ()=>{
  const txt=document.getElementById("text").textContent;
  try{ await navigator.clipboard.writeText(txt); document.getElementById("status").textContent="copiato ‚úÖ"; }
  catch(e){ document.getElementById("status").textContent="copia non permessa"; }
};

document.getElementById("downloadTxt").onclick=()=>{
  const txt=document.getElementById("text").textContent;
  const blob=new Blob([txt],{type:"text/plain;charset=utf-8"});
  const a=document.createElement("a");
  a.href=URL.createObjectURL(blob);
  a.download="sercuctech-universal-"+LANG+".txt";
  a.click();
  setTimeout(()=>URL.revokeObjectURL(a.href), 1000);
};

document.getElementById("share").onclick=async ()=>{
  const url = location.origin + "/system/guide/universal.html";
  try{
    if(navigator.share){
      await navigator.share({title:"SerCucTech ‚Ä¢ Guida Universale", text:"Guida universale SerCucTech", url});
      document.getElementById("status").textContent="condiviso ‚úÖ";
    }else{
      await navigator.clipboard.writeText(url);
      document.getElementById("status").textContent="link copiato ‚úÖ";
    }
  }catch(e){
    document.getElementById("status").textContent="condivisione annullata";
  }
};
</script>
